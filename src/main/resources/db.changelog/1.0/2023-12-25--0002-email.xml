<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2023-12-25--0002-email" author="anepretimov">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="email"/>
            </not>
        </preConditions>

        <createTable tableName="email">
            <column name="id"
                    type="BIGINT"
                    autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="email_address" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="person_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_email_person" references="person(id)"
                             deleteCascade="true"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>